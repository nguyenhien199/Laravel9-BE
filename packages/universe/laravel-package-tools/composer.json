{
    "name": "universe/laravel-package-tools",
    "description": "Tools for creating Laravel packages",
    "keywords": ["spatie", "universe", "laravel-package-tools"],
    "homepage": "https://github.com/spatie/laravel-package-tools",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        },
        {
            "name": "ThuyVu",
            "email": "thuyvv.hn@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^9|^10"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "Universe\\PackageTools\\": "src/"
        }
    },
    "autoload-dev": {},
    "extra": {},
    "config": {
        "sort-packages": true,
        "allow-plugins": {}
    },
    "scripts": {
        "pre-package-install": [
            "@php artisan config:clear"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
